<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/turk"
    android:id="@+id/bacg4"



    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/grtnm"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/questtv1"
        android:textSize="28sp"
        android:text="@string/q1Text"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/yel"

        />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        />


    <Button
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/true_msg"
        android:id="@+id/trbtn"
        android:textSize="22sp"
        android:backgroundTint="@color/digo"
        />

    <Button
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/false_text"
        android:id="@+id/flbtn"
        android:textSize="22sp"
        android:backgroundTint="@color/digo"
        />

    <Button
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next_txt"
        android:textStyle="italic"
        android:id="@+id/nxtbtn"
        android:textSize="22sp"
        android:backgroundTint="@color/red"
        />


   <Button
    android:layout_marginTop="15dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/hint_txt"
    android:id="@+id/Hbtn"
    android:textSize="22sp"
    android:backgroundTint="@color/yel"
    />


    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:id="@+id/setbtn"
        android:textSize="22sp"
        android:textColor="@color/gray"
        android:backgroundTint="@color/lightgray"
        android:layout_marginTop="50dp"



        />



</LinearLayout>